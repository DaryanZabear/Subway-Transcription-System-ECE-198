/* USER CODE BEGIN 0 */
int _write(int file, char *data, int len) {
    HAL_UART_Transmit(&huart2, (uint8_t *)data, len, HAL_MAX_DELAY); // Transmit via UART1
    return len; // Return the number of bytes transmitted
}
void send_announcement(UART_HandleTypeDef *huart, char *message) {
    HAL_StatusTypeDef status;
    status = HAL_UART_Transmit(huart, (uint8_t *)message, strlen(message), HAL_MAX_DELAY);

    if (status == HAL_OK) {
        printf("Message transmitted: %s\r\n", message);
    } else {
        printf("Transmission failed with status: %d\r\n", status);
    }
}

